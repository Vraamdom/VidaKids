                                            <select id="tipo_do" name="tipo_do">
                                                <option value="seleccionar">seleccionar</option>
                                                <option value="C.C">C.C</option>
                                                <option value="C.E">C.E</option>
                                                <option value="T.I">T.I</option>
                                            </select>
                                        </div>
                                    </div>

                                    <!-- Grupo: asistencia -->
